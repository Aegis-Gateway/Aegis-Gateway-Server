generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @unique @default(cuid())
  name       String
  email      String    @unique
  password   String
  isVerified Boolean   @default(false)
  project    Project[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Project {
  id        String     @unique @default(cuid())
  title     String
  endpoint  Endpoint[]
  User      User?      @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Endpoint {
  id                   String   @unique @default(cuid())
  title                String
  url                  String   @unique
  apiKey               String
  type                 String
  key                  String
  blackListedCountries String[]
  Project              Project? @relation(fields: [projectId], references: [id])
  projectId            String?
  injectionTypeId      String   @unique
}
